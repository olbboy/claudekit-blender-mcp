{
  "name": "claudekit-blender-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Blender 3D integration with ClaudeKit enhancements",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "claudekit-blender-mcp": "dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "blender",
    "3d-modeling",
    "claudekit",
    "claude-desktop"
  ],
  "author": "ClaudeKit Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "axios": "^1.7.9",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^4.0.14",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.14"
  },
  "files": [
    "dist",
    "blender-addon",
    "README.md",
    "LICENSE"
  ]
}
